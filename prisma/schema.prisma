// Prisma Schema для RecipeGen
// Database: PostgreSQL (локально и Neon в продакшне)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Пользователи
model User {
  id             Int       @id @default(autoincrement())
  email          String    @unique
  password       String? // null для Google OAuth пользователей
  first_name     String
  last_name      String?
  company        String?
  balance        Decimal   @default(0) @db.Decimal(10, 2)
  citizenship    String? // ISO country code
  date_of_birth  DateTime? @db.Date
  phone          String?
  bill_address   String?
  bill_address_2 String?
  bill_city      String?
  bill_state     String?
  bill_postal    String?
  bill_country   String?
  created_at     DateTime  @default(now())
  updated_at     DateTime  @updatedAt

  // Relations
  recipes              Recipe[]
  topups               Topup[]
  sessions             Session[]
  accounts             Account[]
  customCourseRequests CustomCourseRequest[]
  aiStrategyRuns       AiStrategyRun[]
  passwordResetTokens  PasswordResetToken[]
  coursePurchases      CoursePurchase[]
}

// NextAuth Sessions
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       Int
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// NextAuth Accounts (для OAuth)
model Account {
  id                String  @id @default(cuid())
  userId            Int
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

// Сгенерированные рецепты
model Recipe {
  id              Int      @id @default(autoincrement())
  user_id         Int
  recipe_title    String
  recipe_prompt   String   @db.Text
  pdf_file_path   String
  image_file_path String?
  cost            Decimal  @db.Decimal(10, 2)
  created_at      DateTime @default(now())

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
  @@index([created_at])
}

// Пополнения баланса
model Topup {
  id         Int      @id @default(autoincrement())
  user_id    Int
  amount     Decimal  @db.Decimal(10, 2)
  tokens     Int      @default(0) // Количество токенов, добавленных при пополнении
  created_at DateTime @default(now())

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
}

// TransferMit платежи
model TransferMitTopup {
  id            Int      @id @default(autoincrement())
  topup_id      Int?
  user_id       Int
  reference_id  String   @unique
  payment_id    String?
  amount        Decimal  @db.Decimal(10, 2)
  currency      String
  tokens        Int
  bonus_percent Int      @default(0)
  state         String // INITIATED, COMPLETED, DECLINED, CANCELLED
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt

  @@index([user_id])
  @@index([reference_id])
  @@index([state])
}

// Курсы
model Course {
  id                 Int      @id @default(autoincrement())
  slug               String   @unique
  title              String
  title_ar           String?
  description        String   @db.Text
  description_ar     String?  @db.Text
  level              String // General, Beginner, Intermediate, Advanced
  market             String // General, Forex, Crypto, Binary
  price_gbp          Decimal  @db.Decimal(10, 2) // Base price in GBP
  tokens             Int // Token cost
  pdf_path           String
  cover_image        String?
  featured           Boolean  @default(false)
  modules            Json? // Array of modules: [{ order: number, title: string, summary: string }]
  duration_hours_min Int? // Minimum duration in hours
  duration_hours_max Int? // Maximum duration in hours
  created_at         DateTime @default(now())
  updated_at         DateTime @updatedAt

  coursePurchases CoursePurchase[]

  @@index([level])
  @@index([market])
  @@index([featured])
}

// Course Purchases
model CoursePurchase {
  id          Int      @id @default(autoincrement())
  user_id     Int
  course_id   Int
  tokens_cost Int // Token cost at time of purchase
  amount_gbp  Decimal  @db.Decimal(10, 2) // Amount in GBP at time of purchase (0 if paid with tokens)
  language    String   @default("en") // en, ar - language of purchase
  created_at  DateTime @default(now())

  user   User   @relation(fields: [user_id], references: [id], onDelete: Cascade)
  course Course @relation(fields: [course_id], references: [id], onDelete: Cascade)

  @@unique([user_id, course_id]) // Prevent duplicate purchases
  @@index([user_id])
  @@index([course_id])
  @@index([created_at])
}

// Custom Course Requests
model CustomCourseRequest {
  id                     Int       @id @default(autoincrement())
  user_id                Int
  status                 String // draft, pending_payment, in_queue, processing, ready, failed
  experience_years       String // 0, 1-2, 3+
  deposit_budget         String
  risk_tolerance         String // low, medium, high
  markets                String[] // Array of: Forex, Crypto, Binary
  trading_style          String // scalp, day, swing, position
  goals_free_text        String    @db.Text
  additional_notes       String?   @db.Text
  language               String    @default("en") // en, ar
  estimated_ready_at     DateTime?
  tokens_cost            Int       @default(50000)
  payment_id             String?
  ai_model               String    @default("gpt-4o")
  ai_prompt              String?   @db.Text
  ai_response_structured Json? // JSON blueprint
  pdf_url                String?
  created_at             DateTime  @default(now())
  updated_at             DateTime  @updatedAt

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
  @@index([status])
  @@index([created_at])
}

// AI Strategy Runs
model AiStrategyRun {
  id                     Int      @id @default(autoincrement())
  user_id                Int
  status                 String // processing, ready, failed
  experience_years       String // 0, 1-2, 3+
  deposit_budget         String
  risk_tolerance         String // low, medium, high
  markets                String[] // Array of: Forex, Crypto, Binary
  trading_style          String // scalp, day, swing
  time_commitment        String?
  main_objective         String   @db.Text
  language               String   @default("en") // en, ar
  tokens_cost            Int      @default(2000)
  ai_model               String   @default("gpt-4o")
  ai_prompt              String?  @db.Text
  ai_response_structured Json? // Structured response
  rendered_text          String?  @db.Text // Markdown/HTML for UI
  prompt_tokens          Int?
  completion_tokens      Int?
  total_tokens           Int?
  created_at             DateTime @default(now())
  updated_at             DateTime @updatedAt

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
  @@index([status])
  @@index([created_at])
}

// Password Reset Tokens
model PasswordResetToken {
  id         String   @id @default(cuid())
  token      String   @unique
  user_id    Int
  expires    DateTime
  used       Boolean  @default(false)
  created_at DateTime @default(now())

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([user_id])
  @@index([expires])
  @@index([used])
}
